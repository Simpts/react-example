{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "no-await-in-loop": 1,
    "require-atomic-updates": 2,
    "class-methods-use-this": 1,
    "default-param-last": 2,
    "dot-location": [1, "property"],
    "dot-notation": [
      2,
      {
        "allowKeywords": true
      }
    ],
    "max-classes-per-file": [1, 3],
    "no-alert": 1,
    "no-constructor-return": 2,
    "no-else-return": 2,
    "no-eval": 2,
    "no-implied-eval": 2,
    "no-extend-native": 2,
    "no-floating-decimal": 1,
    "no-implicit-coercion": 2,
    "no-invalid-this": 1,
    "no-iterator": 1,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-magic-numbers": 1,
    "no-new": 2,
    "no-new-wrappers": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-throw-literal": 1,
    "no-useless-concat": 2,
    "no-warning-comments": [
      1,
      {
        "terms": ["todo", "fix"],
        "location": "anywhere"
      }
    ],
    "prefer-named-capture-group": 1,
    "prefer-promise-reject-errors": 2,
    "require-await": 1
  },
  "reportUnusedDisableDirectives": true
}
